{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
		"brace-style": [
			"error",
			"allman"
		],
		"eol-last": [
			"error",
			"never"
		],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
		"no-multi-spaces": [
			"error"
		],
		"no-trailing-spaces": [
			"error"
		],
		"operator-linebreak": [
			"error",
			"after"
		],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
		"space-before-function-paren": [
			"error",
			{
				"anonymous": "always",
				"named": "never",
				"asyncArrow": "always"
			}
		]
    }
}
